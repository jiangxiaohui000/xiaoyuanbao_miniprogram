/* miniprogram/pages/search/index.wxss */
.container {
  padding: 10rpx 30rpx;
  height: 100vh;
  width: 100vw;
  overflow: hidden;
  background-color: #fff;
}
/* 搜索框 */
.search {
	width: 94%;
	height: 70rpx;
	background-color: #fff;
  margin-top: 20rpx;
  padding-left: 20rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  border-radius: 40rpx;
  border: 2rpx solid #07c160;
}
.search input {
	height: 80rpx;
	width: 85%;
	margin-left: 20rpx;
  line-height: 100%;
  color: #333;
}
.clear-icon-container {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 70rpx;
  height: 100%;
}
/* 历史搜索 */
.search-history {
  margin-top: 30rpx;
  width: 100%;
  overflow: hidden;
}
.search-history-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}
.history-title {
  color: #333;
  font-size: 30rpx;
}
.icon-delete {
  color: #aaa;
}
.history-tag {
  display: inline-block;
  margin: 0 20rpx 18rpx 0;
  padding: 10rpx 20rpx;
  background-color: #eee;
  color: #888;
  font-size: 24rpx;
  border-radius: 20rpx;
}
/* 热搜榜 */
.hot-search {
  margin-top: 30rpx;
  width: 100%;
  overflow: hidden;
}
.hot-search-content {
  margin-top: 10rpx;
}
.hot-search-content-item {
  width: 47%;
  height: 40rpx;
  float: left;
  line-height: 40rpx;
  color: #888;
  font-size: 28rpx;
  padding-left: 20rpx;
  margin-top: 20rpx;
}