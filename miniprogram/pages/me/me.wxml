<!-- 我的 -->
<view class="user-info">
  <view class="user-info-left">
    <!-- 用户头像 -->
    <button
      open-type="getUserInfo"
      bindgetuserinfo="onGetUserInfo"
      class="user-info-avatar"
      style="background-image: url({{avatarUrl}})"
    ></button>
    <!-- 用户昵称 -->
    <view class="user-name">{{userInfo.nickName}}</view>  
  </view>
  <view class="user-info-right">
    <!-- 点我速卖 -->
    <view class="sole-button" bindtap="doUpload">
      <i class="iconfont icon-maichu"></i>
      <text>点我速卖</text>
    </view>
  </view>
  
  <!-- <view>
    <button class="userinfo-nickname" bindtap="onGetOpenid">点击获取 openid</button>
  </view> -->
</view>

<view class="mine">
  <view class="mine-item" wx:for="{{mineItems}}" wx:key="item" data-item="{{item}}" bindtap="toMineItemDetail">
    <i class="iconfont icon-{{item.icon}}"></i>
    <text style="margin-left: 10rpx;">{{item.label}}</text>
    <text style="margin-left: 10rpx;">{{item.num}}</text>
  </view>
</view>

<view class="goods-container">
  <view class="goods-title">我发布的  {{goodsList.length}}</view>
  <view
    class="goods-item"
    wx:for="{{goodsList}}"
    wx:key="item"
    data-item="{{item}}"
    catchtap="preview">
    <!-- 图片 -->
    <view class="img-container">
      <image class="img" src="{{item.img}}" alt=""></image>
    </view>
    <!-- 描述 -->
    <view class="text-container">
      <view class="goods-desc">{{item.desc}}</view>
      <view class="goods-price">
        <text class="goods-current-price">￥{{item.currentPrice}}</text>
        <view class="operate-button-group">
          <view class="operate-button" catchtap="editGood">编辑</view>
          <view class="operate-button" catchtap="priceReduction">降价</view>
          <view class="operate-button" catchtap="more">更多</view>
        </view>  
        </view>
    </view>
  </view>
</view>