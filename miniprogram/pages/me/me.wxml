<!-- 我的 -->
<view class="user-info">
  <!-- 用户头像 -->
  <button
    open-type="getUserInfo"
    bindgetuserinfo="onGetUserInfo"
    class="user-info-avatar"
    style="background-image: url({{avatarUrl}})"
  ></button>
	<view class="user-detail-container">
    <!-- 用户昵称 -->
	  <view class="user-name">{{userInfo.nickName}}</view>
		<view
      class="user-info-button"
      bindtap="gotoUserDetail">
      <span>个人信息</span>
      <i class="iconfont icon-arrow-right arrow"></i>
    </view>
	</view>
  <!-- <view>
    <button class="userinfo-nickname" bindtap="onGetOpenid">点击获取 openid</button>
  </view> -->
  <!-- 扫一扫 -->
  <i class="scan iconfont icon-saoyisao" bindtap="onScan"></i>
</view>

<view class="mine">
  <view class="goods" bindtap="goToGoodsDetail">
    <view class="text">
      <i class="iconfont icon-shangpin"></i>
      <text style="margin-left: 10rpx;">我的宝贝</text>
    </view>
    <text>{{goodsNum}}</text>
  </view>
  <view class="collection" bindtap="goToCollectionDetail">
    <view class="text">
      <i class="iconfont icon-collection-b"></i>
      <text style="margin-left: 10rpx;">我的收藏</text>
    </view>
    <text>{{collectionNum}}</text>
  </view>
  <view class="buy" bindtap="goToBuyDetail">
    <view class="text">
      <i class="iconfont icon-gouwujianying"></i>
      <text style="margin-left: 10rpx;">我的购买</text>
    </view>
    <text>{{buysNum}}</text>
  </view>
  <view class="evaluate" bindtap="goToEvaluateDetail">
    <view class="text">
      <i class="iconfont icon-pingjia"></i>
      <text style="margin-left: 10rpx;">我的评价</text>
    </view>
    <text>{{evaluateNum}}</text>
  </view>
</view>

<!-- 上传图片 -->
<view class="uploader">
  <view class="uploader-text" bindtap="doUpload">
    <text>发布</text>
  </view>
  <view class="uploader-container" wx:if="{{imgUrl}}">
    <image class="uploader-image" src="{{imgUrl}}" mode="aspectFit" bindtap="previewImg"></image>
  </view>
</view>