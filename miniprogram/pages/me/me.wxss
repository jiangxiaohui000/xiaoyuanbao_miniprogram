page {
  background-color: #ffffff;
  position: relative;
  height: 100%;
  width: 100%;
}
.user-info {
  height: 160rpx;
  width: 100%;
  margin-top: 0;
  background-color: #ffffff;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.user-detail-container {
  width: 160rpx;
  overflow: hidden;
}
.user-name {
  font-size: 36rpx;
  height: 50rpx;
  margin-bottom: 16rpx;
}
.user-info-button {
  padding: 6rpx 0;
  background-color: #fff;
  font-size: 24rpx;
  border-radius: 10px;
  width: 100%;
  height: 20rpx;
  line-height: 20rpx;
  color: #999;
}
.scan {
  margin: 0 50rpx 0 auto;
}
.arrow {
  font-size: 24rpx;
  margin-left: 6rpx;
}
.user-info-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 40rpx;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
}
.user-info-avatar:after {
  border: none;
}
.uploader {
  height: 100rpx;
  width: 100rpx;
  border-radius: 50%;
  position: absolute;
  bottom: 50rpx;
  right: 50%;
  margin-right: -50rpx;
  box-shadow: 0 0 20rpx #aaa;
}
.uploader-text {
  width: 100%;
  line-height: 52px;
  font-size: 34rpx;
  color: #ffffff;
  text-align: center;
}
.uploader-container {
  width: 100%;
  height: 400rpx;
  padding: 20rpx 20rpx 20rpx 0;
  display: flex;
  align-content: center;
  justify-content: center;
  box-sizing: border-box;
  border-top: 1px solid rgba(0, 0, 0, 0.1);
}
.uploader-image {
  width: 100%;
  height: 360rpx;
}
.mine {
  width: 100%;
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
  background-color: #eee;
  padding: 10rpx 0;
  border-radius: 15rpx;
}
.goods, .collection, .buy, .evaluate {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.text {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 26rpx;
}