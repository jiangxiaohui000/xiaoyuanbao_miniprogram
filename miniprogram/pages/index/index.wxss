/**index.wxss**/
page {
  background-color: #ff9966;
}
.container {
  background: #ff9966;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  width: 100%;
  height: 100%;
  padding: 0 20rpx;
}
.search {
	width: 94%;
	height: 80rpx;
	background-color: #fff;
	border-radius: 20rpx;
  margin-top: 20rpx;
  padding: 0 20rpx;
  position: relative;
}
.search icon {
	width: 32rpx;
	position: absolute;
	top: 50%;
	transform: translateY(-50%);
}
.search input {
	position: absolute;
	height: 100%;
	width: 90%;
	margin-left: 45rpx;
	line-height: 100%;
}
.banner {
  width: 100%;
  border-radius: 20rpx;
  margin-top: 40rpx;
  overflow: hidden;
}
.goods-container {
  margin-top: 40rpx;
  width: 100%;
  overflow: hidden;
}
.goods-item {
  height: 180rpx;
  background-color: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  padding-right: 10rpx;
  display: flex;
  margin-bottom: 22rpx;
}
.goods-item .img-container {
  height: 100%;
  flex: 1;
}
.goods-item .img-container .img {
  background-size: cover;
  border-radius: 20rpx;
}
.goods-item .text-container {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  flex: 3;
  padding-left: 14rpx;
}
.goods-item .text-container .goods-desc {
  font-size: 24rpx;
  color: #333;
  overflow: hidden;
  line-height: 30rpx;
  height: 60rpx;
}
.goods-item .text-container .goods-price {
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
}
.goods-item .text-container .goods-price button {
  margin: 0;
  margin-right: 10rpx;
  padding: 0 50rpx;
}
.goods-item .text-container .goods-price .goods-current-price {
  font-size: 34rpx;
  color: red;
  margin-right: 16rpx;
}
.goods-item .text-container .goods-price .goods-origin-price {
  font-size: 22rpx;
  color: #aaa;
  text-decoration: line-through;
}