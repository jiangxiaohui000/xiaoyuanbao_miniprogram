/**index.wxss**/

page {
  background: #ff9966;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}
.search {
	width: 90%;
	height: 60rpx;
	background-color: #fff;
	border-radius: 5px;
	margin-top: 20rpx;
	padding: 0 20rpx;
	position: relative;
}
.search icon {
	width: 32rpx;
	position: absolute;
	top: 50%;
	transform: translateY(-50%);
}
.search input {
	position: absolute;
	height: 100%;
	width: 90%;
	margin-left: 45rpx;
	line-height: 100%;
}

