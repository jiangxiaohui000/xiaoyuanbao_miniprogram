<view class="container">
  <!-- 搜索框 -->
  <view class="search">
		<icon type='search' size="32rpx"></icon>
    <input type="text" placeholder="想买点什么？" confirm-type="search" placeholder-style="font-size: 30rpx; color: #ccc" />
  </view>

  <!-- 商品列表 -->
  <view class="goods-container">
    <view class="goods-item" wx:for="{{goodsList}}" wx:key="id">
      <view class="img-container">
        <cover-image class="img" src="{{item.img}}" alt="" ></cover-image>
      </view>
      <view class="text-container">
        <view class="goods-desc">{{item.desc}}</view>
        <view class="goods-price">
          <view>
            <text class="goods-current-price">￥{{item.currentPrice}}</text>
            <text class="goods-origin-price">￥{{item.originPrice}}</text>
          </view>
          <button size="mini" type="primary">想要</button>
        </view>
      </view>
    </view>
  </view>

