/* pages/postProduct/postProduct.wxss */
.container {
  width: 100%;
  padding: 0 20rpx 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  overflow-y: scroll;
}
.title {
  height: 80rpx;
  width: 100%;
  display: flex;
  align-items: center;
}
.text-area-box {
  width: 100%;
}
.text-area {
  width: 100%;
  border-radius: 10rpx;
  overflow: hidden;
  background-color: #eee;
}
.img-box {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
}
.img-box-inner {
  position: relative;
}
.guanbi {
  position: absolute;
  right: 20rpx;
  top: 10rpx;
}
.img {
  width: 225rpx;
  height: 225rpx;
  border-radius: 10rpx;
  margin: 0 10rpx 10rpx 0;
  background-color: #eee;
  vertical-align: middle;
}
.img:nth-child(3n + 0) {
  margin-right: 0;
}
.add {
  width: 225rpx;
  height: 225rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #eee;
  border-radius: 10rpx;
}
.img-preview-box {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  background-color: #aaa;
}
.img-preview {
  width: 100%;
  height: 100%;
}
.close-preview {
  width: 120rpx;
  height: 50rpx;
  border-radius: 10rpx;
  background-color: #fff;
  color: #000;
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  top: 10px;
  right: 10px;
  font-size: 22rpx;
}
.price {
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.price-input {
  flex: 1;
  color: #07c160;
  font-size: 30rpx;
}
.release-button {
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  background-color: rgba(7, 193, 96, 0.8);
  position: fixed;
  left: 0;
  bottom: 0;
}