/* pages/postProduct/postProduct.wxss */
.container {
  width: 100%;
  padding: 20rpx 20rpx 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  overflow-y: scroll;
}
.text-area-box {
  width: 100%;
  height: 180px;
}
.text-area {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
  overflow: hidden;
}
.img-box {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  margin-top: 20rpx;
}
.img-box-inner {
  position: relative;
}
.guanbi {
  position: absolute;
  right: 20rpx;
  top: 10rpx;
}
.img {
  width: 225rpx;
  height: 225rpx;
  border-radius: 10rpx;
  margin: 0 10rpx 10rpx 0;
  background-color: #eee;
  vertical-align: middle;
}
.img:nth-child(3n + 0) {
  margin-right: 0;
}
.add {
  width: 225rpx;
  height: 225rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #eee;
  border-radius: 10rpx;
}
.price {
  width: 100%;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.price-input {
  flex: 1;
  color: #07c160;
  font-size: 30rpx;
}
.classify {
  width: 100%;
  height: 80rpx;
  display: flex;
  align-items: center;
}
.classify-title {
  font-size: 30rpx;
  display: flex;
  align-items: center;
  flex: 1;
}
.icon-leibie {
  font-size: 22rpx;
}
.classify-item-container {
  display: flex;
  flex-wrap: nowrap;
  overflow-x: scroll;
  flex: 4;
}
.classify-item-container::-webkit-scrollbar {
  display: none;
}
.classify-item {
  min-width: 100rpx;
  height: 50rpx;
  line-height: 50rpx;
  padding: 0 10rpx;
  text-align: center;
  border-radius: 30rpx;
  font-size: 24rpx;
  margin-right: 10rpx;
  background-color: #fff;
  border: 1px solid #eee;
  color: #999;
}
.classify-item-active {
  background-color: #07c160;
  color: #fff;
}
.release-button {
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  background-color: #07c160;
  position: fixed;
  left: 0;
  bottom: 0;
}